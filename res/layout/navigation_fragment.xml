<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigationFragment" >
    	
    	<LinearLayout
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:id="@+id/map_container" />

    	<LinearLayout
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:id="@+id/static_vehicle_marker_container" >
    		
    	    <ImageView
	    	    android:id="@+id/static_vehicle_marker"
	    	    android:contentDescription="@+id/static_vehicle_marker"
	    	    android:layout_width="0dp"
	    		android:layout_height="0dp"
	    		android:visibility="invisible" />  
    	</LinearLayout>
    	
    	<LinearLayout
    	    android:id="@+id/directions_overlay_container"
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent" />
    	
    	<LinearLayout
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:id="@+id/map_overlay_container" />

</FrameLayout>